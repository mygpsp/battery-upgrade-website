{
    "name": "battery-order-function",
    "version": "1.0.0",
    "description": "Google Cloud Function for processing battery upgrade orders",
    "main": "index.js",
    "scripts": {
        "start": "functions-framework --target=submitOrder --port=8080",
        "deploy": "gcloud functions deploy submitOrder --runtime nodejs20 --trigger-http --allow-unauthenticated --region=us-central1"
    },
    "dependencies": {
        "@google-cloud/firestore": "^7.10.0",
        "@google-cloud/functions-framework": "^3.4.2"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}